{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run current script in Scriptable",
			"type": "shell",
			"command": "echo ${fileBasenameNoExtension} | perl -MURI::Escape -ne 'chomp;print uri_escape($_),\"\\n\"' | { read uriEncoded; open scriptable:///run/${uriEncoded} }",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"focus": false
			}
		},
		{
			"label": "Build current script",
			"type": "shell",
			"command": "npm run build ./\"${relativeFile}\"",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"focus": false
			}
		},
		{
			"label": "Build and watch current script",
			"type": "shell",
			"command": "npm run build-watch ./\"${relativeFile}\"",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"focus": false
			}
		}
	]
}
